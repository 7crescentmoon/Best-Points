<% layout('layouts/layout') %>

<div class="row"></div><% layout('layouts/layout') %>

<div class="container">
  <div class="col-6 offset-3">
    <h1 class="text-center">REGISTER</h1>
    <!-- <a href="/register" class="btn btn-primary mb-3 btn-sm text-center">Back</a> -->
    <form
      action="/register"
      method="POST"
      class="form-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          class="form-control"
          type="text"
          name="username"
          placeholder="Username"
          id="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>  
        <div class="invalid-feedback">field is required</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          class="form-control"
          type="text"
          name="email"
          placeholder="Email"
          id="email"
          required
        />
        <div class="valid-feedback">Looks good!</div>  
        <div class="invalid-feedback">field is required</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          class="form-control"
          type="password"
          name="password"
          placeholder="password"
          id="password"
          required
        />
        <div class="valid-feedback">Looks good!</div>  
        <div class="invalid-feedback">field is required</div>
      </div>

     
      <button type="submit" class="btn btn-success mb-3">REGISTER</button>
    </form>
  </div>
</div>

